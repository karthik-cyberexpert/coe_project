# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_USER=coe_app
DB_PASSWORD=your_secure_password_here
DB_NAME=coe_project
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_characters_long
JWT_EXPIRES_IN=24h

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration (for password reset, future feature)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@coe-project.com

# Security
BCRYPT_ROUNDS=10
SESSION_CLEANUP_INTERVAL=86400000

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

